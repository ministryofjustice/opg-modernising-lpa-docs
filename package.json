{
  "name": "opg-modernising-lpa-docs",
  "version": "1.0.0",
  "main": "index.js",
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "scripts": {
    "jshint": "jshint src/",
    "lint:check": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "lint:spell": "cspell '**/*.*'",
    "lint:markdown": "markdownlint '**/*.md' --ignore node_modules",
    "lint:all": "yarn run lint:check && yarn run lint:spell && yarn run lint:markdown",
    "sass": "sass --style=compressed src/scss/styles.scss src/_includes/css/styles.css",
    "build": "npm run sass && eleventy",
    "start": "npm run sass && eleventy --serve",
    "eleventy": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.11",
    "@kevingimbel/eleventy-plugin-mermaid": "^1.1.0",
    "cspell": "^5.18.0",
    "dayjs": "^1.10.7",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "govuk-frontend": "^4.0.0",
    "jshint": "^2.13.4",
    "markdown-it": "^12.3.2",
    "markdownlint-cli": "^0.30.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.0"
  }
}
