{
  "name": "opg-modernising-lpa-docs",
  "version": "1.0.0",
  "main": "index.js",
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "scripts": {
    "jshint": "jshint src/",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:spell": "cspell '**/*.*'",
    "lint:markdown": "markdownlint '**/*.md' --ignore node_modules --ignore extensions",
    "lint:all": "yarn run lint:check && yarn run lint:spell && yarn run lint:markdown",
    "sass": "sass --style=compressed src/scss/styles.scss src/_includes/css/styles.css",
    "build": "yarn run sass && eleventy",
    "start": "yarn run sass && eleventy --serve",
    "eleventy": "eleventy",
    "pa11y-ci": "pa11y-ci '_site/**/*.html'"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.2",
    "@11ty/eleventy-plugin-inclusive-language": "1.0.3",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "@babel/core": "7.20.7",
    "@babel/eslint-parser": "7.19.1",
    "@babel/preset-env": "7.20.2",
    "cspell": "6.18.0",
    "dayjs": "1.11.7",
    "eleventy-plugin-toc": "1.1.5",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "globby": "^13.1.3",
    "govuk-frontend": "4.4.1",
    "jshint": "2.13.6",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.6",
    "markdownlint-cli": "0.32.2",
    "pa11y-ci": "^3.0.1",
    "prettier": "2.8.1",
    "sass": "1.57.1"
  },
  "eslintIgnore": [
    "_site/",
    "/extensions/**/*.js"
  ]
}
