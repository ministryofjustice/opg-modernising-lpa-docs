<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="theme-color" content="#0b0c0c">
    
    <link rel="preload" href="{{ '/assets/fonts/light-94a07e06a1-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/fonts/bold-b542beb274-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/styles.css' | url }}" rel="stylesheet" as="style">

    <link rel="shortcut icon" href="{{ '/assets/images/favicon.ico' | url }}" type="image/x-icon">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-180x180.png' | url }}" sizes="180x180">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-167x167.png' | url }}" sizes="167x167">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-152x152.png' | url }}" sizes="152x152">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon.png' | url }}">

    <meta name="description" content="Modernising Lasting Power of Attorney Documentation site for openess and transparency">
    <meta property="og:image" content="{{ '/assets/images/moj-opengraph-image.png' | url }}">

    <link href="{{ '/assets/styles.css' | url }}" rel="stylesheet">
    <title>{{ title }} - Modernising Lasting Power of Attorney Documentation</title>
  </head>
  <body class="govuk-template__body">
    {%- from "../partials/header.njk" import govukHeader %}
    {%- from "../partials/footer.njk" import govukFooter %}
    {%- from "../../../node_modules/govuk-frontend/govuk/components/skip-link/macro.njk" import govukSkipLink %}
    {{ govukSkipLink({
      text: "Skip to main content",
      href: "#content"
    }) }}
    {% block body %}
      <div>

        {{ govukHeader({
            homepageUrl: "/",
            serviceName: "Modernising Lasting Power of Attorney Documentation",
            serviceUrl: "/",
            navigation: [
              {
                href: "/research-development",
                text: "Research & Development"
              },
              {
                href: "/adr",
                text: "Architectural Decision Records"
              }
            ]
          })
        }}

        
        
        {% block content %}
        <div class="govuk-width-container">
          <main class="govuk-main-wrapper" role="main">

            {{ content | safe }}
            
          </main>
        </div>
        {% endblock %}

        {{ govukFooter({
            meta: {
              items: [
                {
                  href: "/research-development/articles/tech-ethic-decisions/",
                  text: "Tech Ethics in our decision making reference"
                },
                {
                  href: "https://sites.google.com/digital.justice.gov.uk/opgmlpa",
                  text: "Modernising lasting powers of attorney blog"
                }
              ]
            }
          }) 
        }}

      </div>
    {% endblock %}
  </body>
</html>
